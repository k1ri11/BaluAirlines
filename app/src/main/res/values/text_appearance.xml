<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Bold" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="TextAppearance.BoldLargeBody" parent="TextAppearance.Bold">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.BoldBody" parent="TextAppearance.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.LargeBody" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Description" parent="TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Airports" parent="TextAppearance.Regular">
        <item name="android:textSize">36sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
</resources>